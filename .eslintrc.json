{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "indent": "error",
    "no-mixed-spaces-and-tabs": "error",
    "semi": "error",
    "array-bracket-newline": "error",
    "quotes": "error",
    "jsx-quotes": "error",
    "arrow-parens": "error",
    "arrow-spacing": "error",
    "eol-last": "error",
    "key-spacing": "error",
    "object-curly-spacing": ["error", "always"]
  }
}
